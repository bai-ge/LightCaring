<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>
    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Activity主题 -->
    <style name="Transparent.holo" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="push_style">
        <item name="android:hint">@string/style_hint</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="push_alias">
        <item name="android:hint">@string/alias_hint</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="push_tag">
        <item name="android:hint">@string/tag_hint</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="OptionMenuStyle" parent="android:Widget.Material.TextView" tools:ignore="ResourceName">
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textColor">#fefefe</item>
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:background">@drawable/bg_menu</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="tab_llyt">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <!--        <item name="android:background">@drawable/bg_tab_touch</item>-->
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="tab_tv">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="action_llyt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
    </style>

    <style name="action_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/bg_action_bar_button</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="action_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:alpha">0.9</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- 新建闹钟/编辑 -->
    <style name="new_alarm_clcok_item_llyt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:background">@drawable/shape_circle_dialog</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="divider_line_blank">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
    </style>

    <style name="divider_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray_divider_line</item>
        <item name="android:layout_marginLeft">13dp</item>
        <item name="android:layout_marginRight">13dp</item>
    </style>

    <style name="new_alarm_clcok_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="new_alarm_clcok_item_type">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">19dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_text_normal_common</item>
    </style>

    <style name="new_alarm_clcok_item_describe">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/darkgray</item>
    </style>

    <style name="new_alarm_clock_repeat_days_llyt">
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="new_alarm_clcok_nap_edit_radio_btn">
        <item name="android:layout_width">38dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/toggle_btn_repeat_week</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/text_color_toggle_btn_circle</item>
    </style>

    <style name="new_alarm_clcok_repeat_days_tog_btn">
        <item name="android:layout_width">38dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:background">@drawable/toggle_btn_repeat_week</item>
        <item name="android:checked">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/text_color_toggle_btn_circle</item>
    </style>

    <style name="new_alarm_clcok_item_toggle_btn">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginRight">18dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:button">@drawable/toggle_btn_alarm_on_off</item>
        <item name="android:checked">true</item>
        <item name="android:textOff">""</item>
        <item name="android:textOn">""</item>
    </style>
</resources>
