<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/colorPrimary">
    <!--动态设置背景壁纸，会导致异步回调后再设置数据显示不出来，必须设置数据后才能再动态设置壁纸-->
    <com.carefor.view.MySlidingView
        android:id="@+id/my_sliding_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_old2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="13dp"
                android:paddingTop="13dp"
                android:text="监测到疑似摔倒动作\n即将自动发送警报信息\n点击倒计时直接发送"
                android:textColor="@color/white_trans60"
                android:textSize="22sp"/>
            <com.carefor.view.CircleProgressbar
                android:id="@+id/count_drown_progressbar"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="倒计时"
                android:textColor="@color/white_trans50"
                android:textSize="35sp"
                app:out_line_color="#00000000"
                app:in_circle_color="@color/black_trans30"
                app:progress_color="#f9cf72"
                app:progress_line_width="5dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/sliding_tip_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp"
            android:drawableLeft="@drawable/anim_sliding_tip"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="右滑取消发送"
            android:textColor="@color/white"
            android:textSize="18sp"/>
    </com.carefor.view.MySlidingView>
</LinearLayout>